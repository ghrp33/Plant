<div class="container">
  <h1 class="p-5">My outgoing requests</h1>

  <div class="row row-cols-1 row-cols-md-4 g-4">
    <% @requests.each do |request| %>
      <div class="col">
        <div class="card" style="width: 18rem;">
          <% if  request.plante.image.attached?%>
            <%= cl_image_tag request.plante.image.key, height: 300, width: 300, crop: :fill %>
          <% else %>
            <%= image_tag "No_images_available.webp", alt: request.plante.name, width: "100%", height: "300px" %>
          <% end %>
            <div class="card-body">
              <h5 class="card-title"></h5>
              <p class="card-text">Seller: <%= request.plante.user.first_name %></p>
              <p class="card-text">status: <% if request.status.nil? %>
              pending
              <% elsif request.status == true %>
                approved
              <% else %>
                declined
              <% end %>
              <p>Plante name: <%= request.plante.name %></p>
            </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to 'return to homepage', root_path, class: 'btn btn-primary' %>
</div>
