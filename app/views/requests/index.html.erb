<h1>My outgoing requests</h1>

<div class="row row-cols-1 row-cols-md-4 g-4">
  <% @requests.each do |request| %>
    <div class="col">
      <div class="card" style="width: 18rem;">
        <img src="https://media.istockphoto.com/id/1470078088/photo/variedad-de-flores-y-plantas-artificiales-suculentas-rosas-cactus-en-macetas-de-colores.jpg?s=1024x1024&w=is&k=20&c=EbXXNfO-2UDylxfEwURc8u9s2ab3ahHxQMMhgDOCgqQ=" class="card-img-top" alt="">
          <div class="card-body">
            <h5 class="card-title"></h5>
            <p class="card-text">Seller: <%= request.user.first_name %></p>
            <p class="card-text">status: <% if request.status.nil? %>
            pending
            <% elsif request.status == true %>
              approved
            <% else %>
              declined
            <% end %>
            <p>Plante name: <%= request.plante.name %></p>
          </div>
      </div>
    </div>
  <% end %>
</div>


<%= link_to 'return to homepage', root_path, class: 'btn btn-primary' %>
