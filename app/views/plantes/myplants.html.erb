<div class="container d-flex">
  <% @myplants.each do |plant| %>

    <h1><%= plant.name %></h1>
    <p><%= plant.variety %></p>
    <p><%= plant.price %>$</p>

    <% if plant.description %>
      <p><%= plant.description %></p>
    <% end %>

  <%# #request status %>
  <%# test %>

    <% if  plant.image.attached?%>
      <%= cl_image_tag plant.image.key, height: 300, width: 300, crop: :fill %>
    <% else %>
      <%= image_tag "No_images_available.webp", alt: plant.name, width: "300px", height: "100%" %>
    <% end %>

  <% end %>
</div>

<%= link_to "Back to plants", plantes_path %>
