<div class="container d-flex">
  <div>
    <% if  @plante.image.attached?%>
      <%= cl_image_tag @plante.image.key, height: 300, width: 300, crop: :fill %>
    <% else %>
      <img src="https://fleuristeladiva.ca/boutique/image/cache/catalog/Plantes%20/Fleuriste_la_diva_plante_schefflera_plante_int%C3%A9rieure_Laval-550x550.jpg" alt="%= @plante.name" height="300px">
    <% end %>
  </div>
  <div>
    <h1><%= @plante.name %></h1>

    <p><%= @plante.variety %></p>
    <p><%= @plante.price %>$</p>
    <% if @plante.description %>
      <p><%= @plante.description %></p>
    <% end %>
  </div>
</div>
<%= link_to "Back to plants", plantes_path %>
